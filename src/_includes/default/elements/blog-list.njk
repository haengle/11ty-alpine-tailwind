{% if postSettings.externalLink.value and 'http' in postSettings.externalLink.value %}
    {% set postUrl = postSettings.externalLink.value %}
    {% set postLinkTarget = "_blank" %}
{% else %}
    {% set postUrl = postSettings.urlPath.value %}
    {% set postLinkTarget = "" %}
{% endif %}
<article class="blog-list-item blog-list-item--default">
       <div class="blog-list-item-wrapper">
           {% if postData.fields.postImage.value %}
            <div class="blog-list-item-image">
                <a href="{{ postUrl }}" target="{{ postLinkTarget }}"> 
                        <img 
                            srcset="{{ postData.fields.postImage.value | getAssetUrl }}?w=640&ar=4:2.5&fit=crop&auto=format 640w,
                                    {{ postData.fields.postImage.value | getAssetUrl }}?w=320&ar=4:2.5&fit=crop&auto=format 320w"
                            src="{{ postData.fields.postImage.value | getAssetUrl }}?w=640&ar=4:2.5&fit=crop&auto=format"
                            alt="{{ postData.fields.postImage.value.description|default(" ") }}">
                        </a>
                    </div>
            {% endif %}
             <div class="blog-list-item-content">
                <div class="blog-list-item-date">
                    {{ postData.fields.publishDate.value.datetime | prettyDate }}
                </div>
                <h3><a href="{{ postUrl }}" target="{{ postLinkTarget }}">{{ postData.fields.postTitle.value | safe }}</a></h3>
                        {% if postData.fields.summary.value %}
                            <p>{{ postData.fields.summary.value }}</p>
                        {% endif %}
                    
                    <div class="blog-list-item-meta">
                        {% if postData.fields.categories.value !== "" %}
                        <div class="blog-list-item-category">
                            <span>{{ postData.fields.categories.value }}</span>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
</article>

